@model IEnumerable<Online_Shop.Models.BeanBagPerson>

@{
    ViewBag.Title = "Index";
}

<h2>Sitzsack für Personen</h2>
<table>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.picture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.color) <br />
            @Html.DisplayFor(modelItem => item.measure) <br />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
            <button>In den Warenkorb</button>
        </td>
    </tr>
}
</table>
